<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="6.67dp"
    android:paddingLeft="13.4dp"
    android:paddingRight="13.4dp"
    android:paddingTop="6.67dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:orientation="vertical" android:id="@+id/linearLayout_devinfo">

        <TextView
            android:id="@+id/textView_devname"
            style="@style/Text.primaryListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HealthSofa" />

        <TextView
            android:id="@+id/textView_devinfo"
            style="@style/Text.secondaryListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:01:02:03:04:05" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout_devinfo"
        android:layout_alignParentRight="true" >

         <!-- <ImageView
            android:id="@+id/imageView_devstatus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_update" /> -->
            
           <TextView
               android:id="@+id/devstatus"
               android:layout_width="wrap_content"
               android:layout_height="25dp"
               android:text="未连接"
               />
    </LinearLayout>

</RelativeLayout>